<?xml version="1.0" encoding="UTF-8"?>
<!--  The frame is used only in the sample application use for the tests -->
<frame name="mainframe" id="mainFrame" size="800,600" bundle="org.argouml.i18n.andromda" resizable="true" title="Sample MDA Launcher" defaultCloseOperation="JFrame.EXIT_ON_CLOSE">

  <menubar id="MENUBAR" name="menubar" constraints="BorderLayout.NORTH" Bounds="0,0,640,30" Visible="true">
    <!-- File menu -->
    <menu id="menu_file" mnemonic="VK_F" text="File">
      <menuitem id="mi_open" text="Open..." macos_openfile="true" mnemonic="VK_O" action="openAction"/>
      <menuitem id="mi_save" text="Save" mnemonic="VK_S" action="saveAction" enabled="false"/>
      <separator/>
      <menuitem id="mi_settings" text="Settings..." mnemonic="VK_W" action="settingsAction"/>
      <separator/>
      <menuitem id="mi_exit" mnemonic="VK_Q" text="Exit" macos_quit="true" action="quitAction"/>
    </menu>
    <!-- Tool menu -->
    <menu id="menu_andromda_module" mnemonic="VK_T" text="Tools">
      <menuitem id="mi_newProj" macos_openapp="true" text="andromda.menu.create" action="createProjectAction"/>
      <menuitem id="mi_maven" text="andromda.menu.launch" action="launchMavenAction"/>
      <!-- 
      <menuitem id="mi_start_server" text="andromda.menu.server.start" action="startServerAction"/>
      <menuitem id="mi_stop_server" text="andromda.menu.server.stop" action="stopServerAction"/>
      <menuitem id="mi_show_console" text="andromda.menu.console.show" action="showConsoleAction"/>
       -->
    </menu>
    
  </menubar>  
  <panel visible="false">
  	<textfield id="TMPL_TF" 
  	font="Arial-PLAIN-10" 
  	size="260,20" 
  	preferredSize="260,20" 
  	minimumSize="260,20"
  	maximumSize="260,20"
  	border="EtchedBorder"/>
  	<textfield id="TMPL_LBL" 
  	minimumSize="80,20"
  	maximumSize="80,20"  	
  	preferredSize="80,20"
  	size="80,20"/>
  </panel>
    <desktoppane>
      <internalframe id="prefsFrame" resizable="true" preferredSize="320,280" size="320,280" title="Preferences" visible="false" defaultCloseOperation="JFrame.HIDE_ON_CLOSE" closable="true">
	<panel layout="FlowLayout(FlowLayout.LEFT)" id="andromdaSettings" visible="true">
		<vbox>
			<hbox>
				<label labelfor="mavenHome" text="andromda.settings.maven.home"
					 refid="TMPL_LBL"/>
				<textfield id="mavenHome" refid="TMPL_TF"/>
				<button text="select.browse" action="chooseMavenHomeAction"/>
			</hbox>
			<hbox>
				<label labelfor="andromdaHome" text="andromda.settings.andromda.home"
					refid="TMPL_LBL"/>
				<textfield id="andromdaHome" refid="TMPL_TF"/>
				<button text="select.browse" id="btAndromdaHome"
					action="chooseAndroMdaHomeAction"/>
			</hbox>
			<hbox>
				<checkbox id="useAndromdaProfile"/>
				<label text="andromda.settings.use.profile.default"/>
			</hbox>			
			<!-- 
				<hbox>
				<label labelfor="antHome" text="Ant Home" preferredSize="100,20" size="100,20"/>
				<textfield id="antHome" columns="30" preferredSize="200,20" size="200,20"/>			 	
				<button text="Browse" action="selectFolder"></button>
				</hbox>
				<hbox>
				<label labelfor="j2eeHome" text="J2EE Home" preferredSize="100,20" size="100,20"/>
				<textfield id="j2eeHome" columns="30" preferredSize="200,20" size="200,20"/>			 	
				<button text="Browse" action="selectFolder"></button>
				</hbox>
			-->
		</vbox>
	</panel>
      </internalframe>
      <internalframe id="toolsFrame" resizable="true" location="10,10" preferredSize="640,480" size="640,480" title="Project" visible="false" defaultCloseOperation="JFrame.HIDE_ON_CLOSE" closable="true">
	<panel layout="FlowLayout(FlowLayout.CENTER)" id="mavenPanel" preferredSize="640,480" size="640,480">
		<vbox>
			<hbox preferredSize="640,300" size="640,300" border="TitledBorder(Maven output)">
				<scrollpane horizontalScrollBarPolicy="0" verticalScrollBarPolicy="0" >
				<textarea id="mavenOutput" columns="80" rows="10" lineWrap="true"/>
				</scrollpane>
			</hbox>
			<hbox preferredSize="640,150" size="640,150" border="TitledBorder(Maven error)">
				<scrollpane horizontalScrollBarPolicy="0" verticalScrollBarPolicy="0" >
				<textarea id="mavenError" columns="80" rows="5" lineWrap="true"/>
				</scrollpane>
			</hbox>
		</vbox>
	</panel>
	<panel>
		<button id="clearButton" text="andromda.console.clear"/>
	</panel>
	</internalframe>
    </desktoppane>
  
</frame>