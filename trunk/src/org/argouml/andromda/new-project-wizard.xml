<?xml version="1.0" encoding="UTF-8"?>
<dialog size="450,380" name="project.title" bundle="org.argouml.i18n.andromda-new-project" constraints="BorderLayout.CENTER">

  <panel visible="false">
  <textarea id="WZ_TEMPLATE_TEXTAREA" 
  	background="LABEL_BG" lineWrap="true" wrapStyleWord="true" editable="false" />
  <textarea id="WZ_TEMPLATE_TEXTFIELD" 
  	size="420,20" preferredSize="420,20" border="EtchedBorder"/>
  </panel>
    
  <wizardpage id="NEW_PROJECT_GENERAL" preferredSize="440,360" size="440,360" visible="false" 
  	name="newProject1" title="New AndroMDA Project"
  	layout="FlowLayout(FlowLayout.CENTER)">    
  	<vbox>
          <textarea text="project.labels.author" refid="WZ_TEMPLATE_TEXTAREA" />
          <textfield id="projectCreator" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.name" refid="WZ_TEMPLATE_TEXTAREA" />
          <textfield id="projectName" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.id" refid="WZ_TEMPLATE_TEXTAREA" />
          <textfield id="projectId" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.version" refid="WZ_TEMPLATE_TEXTAREA" />
          <textfield id="projectVersion" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.package" refid="WZ_TEMPLATE_TEXTAREA" />          
          <textfield id="baseProjectPackage" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.type" refid="WZ_TEMPLATE_TEXTAREA" />          
          <textfield id="projectType" refid="WZ_TEMPLATE_TEXTFIELD"/>
	</vbox>      
  </wizardpage>

  <wizardpage id="NEW_PROJECT_WAR" preferredSize="440,360" size="440,360" visible="false" name="newProject2" title="EAR/WAR Properties">
      <vbox>          
          <textarea text="project.labels.app.persistence" refid="WZ_TEMPLATE_TEXTAREA" />   
          <textfield id="persistenceType" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.jbpm" refid="WZ_TEMPLATE_TEXTAREA" />   
          <textfield id="jbpm" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.hibernate.version" refid="WZ_TEMPLATE_TEXTAREA" />   
          <textfield id="hibernateVersion" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.webapp" refid="WZ_TEMPLATE_TEXTAREA" />   
          <textfield id="webComponent" refid="WZ_TEMPLATE_TEXTFIELD"/>
          <textarea text="project.labels.app.ws" refid="WZ_TEMPLATE_TEXTAREA" />   
          <textfield id="exposeAsWebService" refid="WZ_TEMPLATE_TEXTFIELD"/>
        </vbox>
  </wizardpage>

  <wizardpage id="NEW_PROJECT_FINISH" preferredSize="440,360" size="440,360" 
  	visible="false" name="newProject3" title="Finish">
      <vbox>
          <textarea text="project.labels.app.parentFolder" refid="WZ_TEMPLATE_TEXTAREA" />  
          <hbox>
          <textfield id="parentFolder" size="400,20" preferredSize="400,20" border="EtchedBorder"/>
          <button id="parentFolderBt" action="chooseParentFolderAction" text="select.browse" 
          	size="30,20" preferredSize="30,20" enabled="true"/>
          </hbox>
    	  <textarea text="project.labels.thanks" refid="WZ_TEMPLATE_TEXTAREA" />  
      </vbox>
  </wizardpage>

  <panel id="WIZARD_BUTTONS">
  	<button id="wizard_previous" text="wizard.previous"/>
  	<button id="wizard_next" text="wizard.next"/>
  	<button id="wizard_finish" text="wizard.finish"/>
  </panel>

</dialog>
